<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="cz.vutbr.fit.mulplayer"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/> <!-- TODO might be DANGER in api 23 -->

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        tools:replace="icon, label"
        android:label="@string/application.name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/main.title"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".model.MusicService"
            android:exported="false"
            />

    </application>

</manifest>